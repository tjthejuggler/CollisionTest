<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">


    <!-- Test Length Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_session_length"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_test_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:chipSpacingHorizontal="8dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_short_test"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_length_short"
            android:checked="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_medium_test"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_length_medium" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_long_test"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_length_long" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Success Count -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_success_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/test_session_success_count"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_success_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            tools:text="8" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Number of Drops -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_drops_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/test_session_drops_count"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_drops_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            tools:text="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Timer Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_session_timer"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:background="@drawable/test_length_background"
        android:padding="16dp">

        <!-- Timer Display -->
        <TextView
            android:id="@+id/tv_timer_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00:00"
            android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"
            android:fontFamily="monospace" />

        <!-- Countdown Display -->
        <TextView
            android:id="@+id/tv_countdown_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/timer_ready"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

        <!-- Timer Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_timer"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/button_start_timer"
                android:backgroundTint="@color/primary"
                app:icon="@drawable/ic_play" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop_timer"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/button_stop_timer"
                android:backgroundTint="@color/primary"
                android:enabled="false"
                app:icon="@drawable/ic_pause" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_timer"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/button_cancel_timer"
                android:textColor="@color/text_secondary"
                android:enabled="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset_timer"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_reset_timer"
                android:textColor="@color/text_secondary"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Notes -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="@string/test_session_notes"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="2"
            android:maxLines="4"
            android:gravity="top"
            tools:text="Good practice session, improved consistency" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Dialog Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/button_cancel"
            android:textColor="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_save"
            android:backgroundTint="@color/primary" />

    </LinearLayout>

</LinearLayout>