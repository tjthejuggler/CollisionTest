<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.progress.ProgressChartFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Filter Controls -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <!-- Test Length Filter -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_session_length"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_test_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:chipSpacingHorizontal="4dp"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_all_lengths"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_all"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_short_tests"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/test_length_short" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_medium_tests"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/test_length_medium" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_long_tests"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/test_length_long" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Timeframe Filter -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timeframe"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_timeframe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="4dp"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_last_week"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_last_week" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_last_month"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_last_month"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_all_time"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_all_time" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Chart Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <!-- Chart Container -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@color/chart_background">

                        <!-- MPAndroidChart LineChart will be added programmatically -->
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/line_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <!-- No Data State -->
                        <LinearLayout
                            android:id="@+id/layout_no_chart_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_chart"
                                android:layout_marginBottom="16dp"
                                app:tint="@color/text_hint"
                                android:contentDescription="@string/no_data_available" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no_data_available"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="@color/text_hint"
                                android:gravity="center" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Stats Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <!-- Stats Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- First Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <!-- Best Short Test -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/stats_background">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stats_best_short_test"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                    android:textColor="@color/text_secondary"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_best_short"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                    android:textColor="@color/success"
                                    tools:text="8/10" />

                            </LinearLayout>

                            <View
                                android:layout_width="8dp"
                                android:layout_height="0dp" />

                            <!-- Best Medium Test -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/stats_background">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stats_best_medium_test"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                    android:textColor="@color/text_secondary"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_best_medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                    android:textColor="@color/warning"
                                    tools:text="35/50" />

                            </LinearLayout>

                            <View
                                android:layout_width="8dp"
                                android:layout_height="0dp" />

                            <!-- Best Long Test -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/stats_background">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stats_best_long_test"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                    android:textColor="@color/text_secondary"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_best_long"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                    android:textColor="@color/info"
                                    tools:text="120/200" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Second Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Success Rate -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/stats_background">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stats_success_rate"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                    android:textColor="@color/text_secondary"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_success_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                    android:textColor="@color/primary"
                                    tools:text="72%" />

                            </LinearLayout>

                            <View
                                android:layout_width="8dp"
                                android:layout_height="0dp" />

                            <!-- Total Attempts -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/stats_background">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stats_total_attempts"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                    android:textColor="@color/text_secondary"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_total_attempts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                    android:textColor="@color/secondary"
                                    tools:text="1,247" />

                            </LinearLayout>

                            <View
                                android:layout_width="8dp"
                                android:layout_height="0dp" />

                            <!-- Practice Time -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:background="@drawable/stats_background">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stats_practice_time"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                    android:textColor="@color/text_secondary"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_practice_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                    android:textColor="@color/juggling_orange"
                                    tools:text="24h" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>