<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/card_background"
    app:rippleColor="@color/ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Tag Color Indicator -->
        <View
            android:id="@+id/view_tag_color"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/tag_color_indicator"
            tools:backgroundTint="@color/tag_blue" />

        <!-- Tag Name -->
        <TextView
            android:id="@+id/tv_tag_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Beginner" />

        <!-- Pattern Count -->
        <TextView
            android:id="@+id/tv_pattern_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
            android:textColor="@color/text_secondary"
            android:background="@drawable/count_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:minWidth="24dp"
            android:gravity="center"
            tools:text="3" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btn_delete_tag"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/delete_tag"
            app:tint="@color/error" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>