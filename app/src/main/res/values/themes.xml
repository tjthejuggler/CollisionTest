<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light Mode). -->
    <style name="Theme.JugglingTracker" parent="Theme.Material3.DayNight">
        <!-- Dynamic Primary brand color. -->
        <item name="colorPrimary">@color/dynamic_primary</item>
        <item name="colorPrimaryVariant">@color/dynamic_primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Dynamic Secondary brand color. -->
        <item name="colorSecondary">@color/dynamic_secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Background colors. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/background</item>
        <!-- Text colors. -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <!-- Window background. -->
        <item name="android:windowBackground">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JugglingTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JugglingTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JugglingTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>